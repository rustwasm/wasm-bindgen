{
  "scripts": {
    "rsbuild": "node ./buildrs -- release",
    "rsbuild:dev": "node ./buildrs",
    "rsbuild:watch": "nodemon ./buildrs.js -e rs --watch ./src/rust",
    "build": "yarn clean && yarn rsbuild && webpack --env=prod --progress --colors",
    "build:dev": "webpack --env=dev --progress --colors",
    "watch:build": "yarn build:dev --watch --watch-aggregate-timeout 300 --watch-poll 500",
    "serve": "yarn rsbuild:dev && npm-run-all --parallel rsbuild:watch serve:webpack",
    "serve:webpack": "webpack-dev-server --env=dev --content-base dist/client/",
    "start": "node ./dist/server",
    "clean": "rimraf ./dist"
  },
  "author": "Mario Reder",
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.0.8",
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "typescript": "2.7",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.8",
    "webpack-node-externals": "^1.7.2"
  }
}
